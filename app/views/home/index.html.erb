<div class="row">
  <div class="span9">
    <%= link_to "Upload File", '#', :class => 'link', :id => 'file_upload', :remote => true  %>
    <div class="row">
      <div class="span6" style="display:none"><%= render 'domains/form'%></div>
      <div class="span3"></div>
      <div class="span10 offset9"><%= paginate @domains %></div>
    </div>
  </div>
</div>

<h2> List of domains</h2>

<div>
</div>
<table class="table table-hover">
		<thead>
			<tr>
  			<th>Site Address</th>
  			<th>Price</th>
  			<th>Date</th>
  			<th>Tag</th>	
        <th>Change Tag? </th>
  		</tr>

		</thead>
  	<tbody>
  		<% if @domains.length > 0 %>
  			<% @domains.each do |domain| %>		
  				<tr>
  					<td><%= domain.url_name %></td>
  					<td><%= domain.rate %> </td>
  					<td><%= domain.url_date.strftime("%B %e, %Y") %> </td>
            <td><%= domain.tag.nil? ? t('not_set'): domain.tag.status.name.capitalize %> </td>
  					<td>
              <% if domain.tag.nil? %>
                <%= dr_link_to t('like'), domain.id %>
                <%= dr_link_to t('hide'), domain.id %>
              <% else %>
                <%= dr_link_to show_link(domain), domain.id %>
              <% end %>
					  </td>
  				</tr>
  			<% end %>
  		<% else %>
  			<tr>
  				<td><%= t('no_records') %><td>
  				<td></td>
  				<td></td>
          <td></td>
  			</tr>	
  		<% end %>
  		
  	</tbody>
</table>


